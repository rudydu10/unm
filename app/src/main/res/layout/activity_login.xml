<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.unm.rodolphe.unnouveaumonde.LoginActivity">

    <TextView android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/Username"
        android:contentDescription="@string/description_username"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textViewUsername"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignRight="@+id/Password"
        android:layout_alignEnd="@+id/Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Password"
        android:contentDescription="@string/description_password"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_below="@+id/textViewUsername"
        android:layout_toRightOf="@+id/textViewUsername"
        android:layout_toEndOf="@+id/textViewUsername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/envoyer"
        android:id="@+id/buttonSubmitLogin"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/Password"
        android:layout_toLeftOf="@+id/checkBox1"
        android:layout_toStartOf="@+id/checkBox1" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se souvenir de moi"
        android:id="@+id/checkBox1"
        android:layout_alignBaseline="@+id/buttonSubmitLogin"
        android:layout_alignBottom="@+id/buttonSubmitLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username :"
        android:id="@+id/textViewUsername"
        android:layout_alignBottom="@+id/Username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:id="@+id/textViewPassword"
        android:layout_above="@+id/buttonSubmitLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

</RelativeLayout>
